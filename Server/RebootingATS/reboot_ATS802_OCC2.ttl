HOSTADDR = '172.21.101.1'
USERNAME = 'dmrc'
PASSWORD = 'nspj2015'
PROMPT_STR = 'dmrc@OCC:~$'
SUDO_PROMPT_STR = '[sudo] password for dmrc:'
